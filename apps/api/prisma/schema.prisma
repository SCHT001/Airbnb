generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id          String  @id @default(cuid())
  name        String
  email       String? @unique
  password    String?
  token       token[]
  phone       Int?    @unique
  countryCode Int?
}

model token {
  userId String @id
  token  String @unique
  user   user   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model listing {
  id            String @id @default(cuid())
  accommodation String
  title         String
  description   String
  host_id       String
  price         Int
  location      String
  place_type    String
  capacity      Int
  bedrooms      Int
  bathrooms     Int
  beds          Int
  rating        Float?
}
